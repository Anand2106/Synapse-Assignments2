{
	"name": "MultiFile_Source",
	"properties": {
		"linkedServiceName": {
			"referenceName": "anandsynapse-WorkspaceDefaultStorage",
			"type": "LinkedServiceReference"
		},
		"parameters": {
			"Folder": {
				"type": "string"
			},
			"File": {
				"type": "string"
			}
		},
		"annotations": [],
		"type": "DelimitedText",
		"typeProperties": {
			"location": {
				"type": "AzureBlobFSLocation",
				"fileName": {
					"value": "@dataset().File",
					"type": "Expression"
				},
				"folderPath": {
					"value": "@dataset().Folder",
					"type": "Expression"
				},
				"fileSystem": "container1"
			},
			"columnDelimiter": ",",
			"escapeChar": "\\",
			"firstRowAsHeader": true,
			"quoteChar": "\""
		},
		"schema": [
			{
				"name": "deptId",
				"type": "String"
			},
			{
				"name": "deptName",
				"type": "String"
			}
		]
	},
	"type": "Microsoft.Synapse/workspaces/datasets"
}